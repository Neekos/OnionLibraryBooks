@model OnionLibrary.Domain.Models.Book
@{
    ViewData["Title"] = "Book Page";
}

<div>
    <form method="post" asp-action="DeleteBook">
        
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
     
        <div class="mb-3">
            <input asp-for="Id" hidden/>
            <input disabled asp-for="Title" placeholder="Имя"/>
            <span  asp-validation-for="Title" class="text-danger"></span>
            <input disabled asp-for="Description" placeholder="Описание"/>
            <span  asp-validation-for="Description" class="text-danger"></span>
            <input disabled asp-for="img" placeholder="Фото"/>
            <span  asp-validation-for="img" class="text-danger"></span>
            <input disabled asp-for="IdShelf" placeholder="Полка"/>
            <span  asp-validation-for="IdShelf" class="text-danger"></span>
            <input disabled asp-for="IdCategory" placeholder="Категория"/>
            <span  asp-validation-for="IdCategory" class="text-danger"></span>
            <input disabled asp-for="IdUser" placeholder="Читатель"/>
            <span  asp-validation-for="IdUser" class="text-danger"></span>
            <button type="submit">Delete</button>
            <a asp-controller="Book" asp-action="Index">Back</a>
        </div>
    </form>
</div>
